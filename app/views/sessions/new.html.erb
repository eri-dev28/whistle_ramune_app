<% #provide(:title, "ログイン") %>
<h1>ログイン</h1>
<%= form_with(url: login_path, scope: :session) do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label :password %>
  <%= f.password_field :password, class: 'form-control' %>

  <%= f.submit "Log in" %>

<% end %>