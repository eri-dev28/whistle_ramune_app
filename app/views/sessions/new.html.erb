<% #provide(:title, "ログイン") %>
<h1>ログイン</h1>
<%= form_with url: login_path, scope: :session, local: true do |f| %>

  <%= f.label :ユーザー名 %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label :パスワード %>
  <%= f.password_field :password, class: 'form-control' %>

  <%= f.submit "ログイン" %>

  <%= link_to "新規登録はこちら", signup_path %>

<% end %>